#


[alias]
    ap = add --patch
    br = branch --all --verbose --verbose
    ca = commit --amend
    di = diff
    ds = diff --staged
    dw = diff --word-diff
    gr = grep --break --heading --line-number
    lo = log --all --decorate --graph --oneline
    ls = log --all --decorate --graph --oneline --simplify-by-decoration
    lt = tag --list -n
    re = remote --verbose
    ru = remote --verbose update --prune
    st = status --branch --short

[init]
	defaultBranch = main

[user]
    email = sinoroc.code+git@gmail.com
    name = sinoroc


